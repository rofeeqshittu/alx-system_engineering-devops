#!/usr/bin/env bash

# Step 1: Update Nginx configuration to run as nginx user
sed -i 's/user  .*/user  nginx;/' /etc/nginx/nginx.conf

# Step 2: Update the server block to listen on all active IPs
sed -i 's/listen 80;/listen 8080;/' /etc/nginx/sites-available/default

# Step 3: Create a new configuration to listen on all IPs
echo "server {
    listen 8080;
    location / {
        root /var/www/html;
        index index.html index.htm;
    }
}" > /etc/nginx/sites-available/default

# Step 4: Restart Nginx to apply the changes
service nginx restart

# Step 5: Check if Nginx is running as the nginx user
ps aux | grep ngin[x]

